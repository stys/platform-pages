# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Index
GET     /                           com.stys.platform.pages.impl.controllers.Actions.index()

# Pages
GET     /pages/:namespace/*key      com.stys.platform.pages.impl.controllers.Actions.view(namespace, key)
POST	/pages/:namespace/*key		com.stys.platform.pages.impl.controllers.Actions.update(namespace, key)
GET		/pages/edit    				com.stys.platform.pages.impl.controllers.Actions.edit(namespace ?= null, key ?= null)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
