# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Index
GET     /                                 com.stys.platform.pages.impl.controllers.Actions.index()

# Pages
GET     /pages/:namespace/*key            com.stys.platform.pages.impl.controllers.Actions.view(namespace, key)
GET		/pages/create    				  com.stys.platform.pages.impl.controllers.Actions.create(namespace ?= null, key ?= null)
GET		/pages/edit					  	  com.stys.platform.pages.impl.controllers.Actions.edit(namespace ?= null, key ?= null)
POST	/pages/save						  com.stys.platform.pages.impl.controllers.Actions.save

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.at(path="/public", file)
